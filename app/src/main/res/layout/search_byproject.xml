<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">



    <ImageView
        android:id="@+id/projectImageView"
        android:layout_alignParentStart="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gradient"/>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/projectImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/projectTitleTextView"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Laser Disk"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fundedTextView"
            android:text="Funded : 34000 PKR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Pleged : 54000 PKR"
            android:id="@+id/plegedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/projectDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore"/>

    </LinearLayout>


</RelativeLayout>